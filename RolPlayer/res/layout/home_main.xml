                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_channel_more_normal" >
                </ImageView>
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/half_white"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
            <com.rolmex.android.rolplayer.widget.StreadyGridView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_pk_gridview"
                android:numColumns="2"
                android:horizontalSpacing="@dimen/space_size_10"
                android:verticalSpacing="@dimen/space_size_10"
