<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/home_history_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/home_history"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/half_white" >
            </TextView>

            <TextView
                android:id="@+id/home_main_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/home_main"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/half_white" >
            </TextView>

            <TextView
                android:id="@+id/home_catory_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/home_catory"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/home_ho_sv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:id="@+id/home_fl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </FrameLayout>
        </HorizontalScrollView>

        <com.rolmex.android.rolplayer.widget.JazzyViewPager
            android:id="@+id/home_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </com.rolmex.android.rolplayer.widget.JazzyViewPager>
    </LinearLayout>

</RelativeLayout>